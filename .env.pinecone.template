# Pinecone Configuration for Cultural Context Service
# Copy this to .env after filling in your values

# ============================================
# PINECONE VECTOR DATABASE
# ============================================
# Get your API key from: https://app.pinecone.io/
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_INDEX_NAME=cultural-context

# ============================================
# KNOWLEDGE BASE SETTINGS
# ============================================
# Auto-index knowledge base on startup
AUTO_INDEX_KB=true

# Batch size for indexing (100 is optimal for most cases)
KB_INDEX_BATCH_SIZE=100

# ============================================
# RAG CONTROL
# ============================================
# Enable RAG-based cultural context retrieval
USE_RAG=true

# ============================================
# OPTIONAL: DATABASE (if using persistence)
# ============================================
# DATABASE_URL=postgresql://postgres:password@localhost:5432/mental_health
# REDIS_URL=redis://localhost:6379

# ============================================
# OPTIONAL: SERVICE SETTINGS
# ============================================
# SERVICE_PORT=8000
# DEBUG=false
