# ResonaAI Voice Emotion Detection Pipeline Configuration

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# Audio Processing Settings
SAMPLE_RATE=16000
CHUNK_SIZE=1024
CHANNELS=1
AUDIO_FORMAT=wav

# Model Settings
MODEL_NAME=facebook/wav2vec2-base-960h
EMOTION_MODEL_PATH=models/emotion_classifier.pkl
FEATURE_EXTRACTOR=wav2vec2

# Feature Extraction Settings
MFCC_FEATURES=13
SPECTRAL_FEATURES=true
PROSODIC_FEATURES=true

# Processing Settings
NOISE_REDUCTION=true
NORMALIZATION=true
VAD_ENABLED=true

# Confidence Thresholds
MIN_CONFIDENCE=0.3
HIGH_CONFIDENCE=0.8

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=.wav,.mp3,.flac,.m4a

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Authentication & Security
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Email Configuration (for email verification)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@resona.ai
BASE_URL=http://localhost:8000

# External API Keys
OPENAI_API_KEY=your-openai-api-key
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=your-azure-region
AZURE_COGNITIVE_SERVICES_KEY=your-azure-cognitive-key
AZURE_COGNITIVE_SERVICES_ENDPOINT=your-azure-endpoint
HUME_AI_API_KEY=your-hume-ai-api-key
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Vector Database (for RAG)
# Note: RAG is optional. The system uses keyword-based search if vector database is not configured.

# Option 1: Pinecone (Recommended for production)
# Modern Pinecone API (v5+) - PINECONE_ENVIRONMENT is no longer required
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX_NAME=cultural-context
# Note: PINECONE_ENVIRONMENT is deprecated in v5+ and will be ignored

# Option 2: Weaviate (Self-hosted or cloud)
# Weaviate v4+ client configuration
WEAVIATE_URL=https://your-instance.weaviate.network
WEAVIATE_API_KEY=your-weaviate-api-key

# Knowledge Base Indexing Configuration
AUTO_INDEX_KB=true
KB_INDEX_BATCH_SIZE=100

# RAG Control
USE_RAG=true